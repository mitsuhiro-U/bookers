<body>

  <h1>Books</h1>

  <table>

    <thead>
      <tr>
        <th>Title</th> <th>Body</th> <th colspan="3"></th>
      </tr>
    </thead>

    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "deta-confim" => "Are you sure?" %></td>
      </tr>
    </tbody>
    <% end %>
    

  </table>

  <h2>New book</h2>
  <% if @book && @book.errors.any? %>
    <div id="error_explanation">
      <h2 class="error-m1"><%= @book.errors.count %>errors prohibited this book from being saved:<br></h2>
      
        <% @book.errors.full_messages.each do |message| %>
          <div class="error-2-box">
            <p>ãƒ»<%= message %></p>
          </div>
        <% end %>
      
    </div>
  <% end %>
  

  <%= form_with model:@book, local:true do |f| %>

  
  <div class="form">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="form">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit " Create Book " %>
  <% end %>

</body>